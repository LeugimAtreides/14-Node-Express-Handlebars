<div class="container valign-wrapper">
    <div class="row">
        <div class="col s12 center-align">
            <h1>
                Eat-Da-Burger
            </h1>
        </div>
    </div>
    <div class="row">
        <div class="col s4 center-align">
            <div class="card-panel orange lighten-4" id="not-eaten">
                <h1>Try A Burger On Us!</h1>
                <ul>
                    {{#each burger}}
                    {{#unless devoured}}
                    {{> burger/burger-block devoured=true}}
                    {{/unless}}
                    {{/each}}
                </ul>
            </div>
        </div>
        <div class="col s4 center-align">
            <div class="card-panel" id="colors">
                <h1>{{burgerGIF}}</h1>
            </div>
        </div>
        <div class="col s4 center-align">
            <div class="card-panel orange lighten-4">
                <h1>The Burgers You Ate!</h1>
                <ul>
                    {{#each burger}}
                    {{#if devoured}}
                    {{> burger/burger-block devoured=false}}
                    {{/if}}
                    {{/each}}
                </ul>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col s12 center-align">
            <h2>Create Your Own Burger!</h2>
        </div>
    </div>
    <div class="row">
        <div class="input-field col s12">
            <label for="new-burger">Make it Juicy</label>
            <input placeholder="Your Burger Name Here" type="text" id="new-burger" name="burger_name">
        </div>
    </div>
    <div class="row">
        <div class="col s12 form-group orange lighten-4">
            <label for="devoured">
                <input class="with-gap red" name="devoured" value="1" checked>
                    <span> NUM NUM NUM</span> 
                    <br>
                <input class="with-gap red" name="devoured" value="0">
                    <span>Save for later</span>
            </label>

        </div>
    </div>
</div>